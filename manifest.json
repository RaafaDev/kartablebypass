// Fichier manifest.json
{
  "manifest_version": 2,
  "name": "Kartable Bypasser",
  "version": "1.0",
  "description": "Browse kartable.fr freely without being premium !",
  "author": "Raafa",
  "permissions": ["activeTab"],
  
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icons/icon1.png",
    "48": "icons/icon2.png",
    "128": "icons/icon3.png"
  },
  
  "content_scripts": [{
    "matches": ["https://www.kartable.fr/ressources/*"],
    "js": ["content.js"]
  }]
}
